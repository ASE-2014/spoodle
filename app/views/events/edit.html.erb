<h1>Event#edit</h1>

<%= form_for @event do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description, size: '60x12' %>
    <p>
        <strong>Sport:</strong>
        <%= @sport %>
    </p>

    <%= f.nested_fields_for :spoodle_dates do |ff| %>
        <%= ff.remove_nested_fields_link 'Remove date' %>
        <%= ff.datetime_select :datetime %>
    <% end %>
    <%= f.add_nested_fields_link :spoodle_dates, 'Add more dates' %>

    <%= f.submit 'Update' %>
<% end %>