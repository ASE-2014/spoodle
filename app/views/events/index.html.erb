<h1>Event#index</h1>

<% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
<% end -%>

<p>Index of all events</p>

<%= link_to 'New event', new_event_path %>
<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Owner</th>
        <th>Dates</th>
        <th>Invitations</th>
        <th colspan="3"></th>
    </tr>

    <% @events.each do |event| %>
        <tr>
            <td><%= event.title %></td>
            <td><%= event.description %></td>
            <td><%= event.owner.username %></td>
            <td><%= event.spoodle_dates.map{ |spoodle_date| spoodle_date.datetime }.join(',<br/>').html_safe %></td>
            <td><%= event.invitations.map{ |invitation| invitation.user.username }.join(',<br/>').html_safe %></td>
            <td><%= link_to 'Show', event_path(event) %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>