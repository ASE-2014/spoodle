<h1>Event#new</h1>
<p>Create a new event.</p>

<%= form_for @event do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description, size: '60x12' %>


    <%= f.nested_fields_for :spoodle_dates do |ff| %>
        <%= ff.remove_nested_fields_link 'Remove date' %>
        <%= ff.datetime_select :datetime %>
    <% end %>
    <%= f.add_nested_fields_link :spoodle_dates, 'Add more dates' %>

    <%= f.nested_fields_for :invitations do |fff| %>
        <%= fff.remove_nested_fields_link 'Remove invitation' %>
        <% # fff.collection_select :invitation, :user, User.all, :email, :email %>
    <% end %>
    <%= f.add_nested_fields_link :invitations, 'Add more invitations' %>
    <%= f.submit 'Create' %>
<% end %>
