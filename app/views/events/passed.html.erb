<h1 class="page-header"><%= fa_icon 'folder' %> Passed Events</h1>
<% flash.each do |name, msg| %>
    <div class="alert alert-dismissable alert-info">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <%= msg %>
    </div>
<% end %>
<% if @passed_events %>
    <%= form_tag passed_events_path, method: :get do %>
        <div class="form-group">
            <div class="input-group">
                <%= text_field_tag :search, params[:search], placeholder: "Filter", class: "form-control" %>
                <span class="input-group-btn">
                    <%= button_tag( :class => "btn btn-default") do %>
                        <i class="fa fa-search"></i>
                    <% end %>
                </span>
            </div>
        </div>
    <% end %>
    <% @passed_events.each do |event| %>
        <div class="panel panel-default">
            <div class="panel-heading media">
                <a class="media-left" href="<%= event_path(event) %>">
                    <img class="media-object default <%= event.sport.name.downcase %> hidden-xs hidden-sm"/>
                    <img class="default <%= event.sport.name.downcase %>64 visible-xs visible-sm"/>
                </a>
                <div class="media-body">
                    <h4><%= link_to event.title, event_path(event) %></h4>
                    <p><%= event.description[0..400] %></p>
                    <ul class="list-inline list-unstyled">
                        <li>
                            <span><%= fa_icon 'calendar fw'%><%= event.definitive_date.from.strftime(" %a, %d. %b %Y") %></span>
                        </li>
                        |
                        <li>
                            <span><%= event.sport.name %></span>
                        </li>
                        |
                        <li>
                            <span>by <%= link_to event.owner, user_path(event.owner) %></span>
                        </li>
                        |
                        <li>
                            <span><%= event.participants.count %> Participant<%= event.participants.count==1 ? "" : "s"%></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    <% end %>
<% end %>