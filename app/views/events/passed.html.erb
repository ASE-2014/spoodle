<h1 class="page-header"><%= fa_icon 'folder' %> Passed Events</h1>
<% flash.each do |name, msg| %>
    <div class="alert alert-dismissable alert-info">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <%= msg %>
    </div>
<% end %>
<% if @passed_events %>
    <%= form_tag passed_events_path, method: :get do %>
        <div class="form-group">
            <div class="input-group">
                <%= text_field_tag :search, params[:search], placeholder: "Filter", class: "form-control" %>
                <span class="input-group-btn">
                    <%= button_tag( :class => "btn btn-default") do %>
                        <i class="fa fa-search"></i>
                    <% end %>
                </span>
            </div>
        </div>
    <% end %>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Sport</th>
                    <th>Organizer</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Participants</th>
                </tr>
            </thead>
            <tbody>
                <% @passed_events.each do |event| %>
                    <tr>
                        <td><%= link_to event.title, event_path(event) %></td>
                        <td><%= event.sport.name %></td>
                        <td><%= event.owner.username %></td>
                        <td>
                            <%= fa_icon 'calendar'%>
                            <%= event.definitive_date.from.strftime("%a, %d.%m.%y: %R") %>
                        </td>
                        <td>
                            <%= fa_icon 'calendar'%>
                            <%= event.definitive_date.to.strftime("%a, %d.%m.%y: %R") %>
                        </td>
                        <td><%= event.participants.map{ |user| user }.join(',<br/>').html_safe %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>