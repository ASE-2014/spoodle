<h1 class="page-header"><%= fa_icon 'gear' %> Settings</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-group", html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <p>
        <div><%= f.label :email %>
            <%= f.email_field :email, class: "form-control", autofocus: true %>
        </div>
    </p>
    <p>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
    </p>
    <p>
        <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        </div>
    </p>
    <p>
        <div><%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
        </div>
    </p>
    <p>
        <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
            <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
        </div>
    </p>
    <div style="float: left; width: auto;">
        <div><%= f.submit "Update", class: "btn btn-success" %></div>
    </div>
<% end %>
<div style="float: right; width: auto;">
    <%= button_to 'Discard', authenticated_root_path, method: :get, class: "btn btn-warning" %>
</div>
<div class="row">
    <br><br>
</div>
